<resources>
    <!-- Base application theme. -->
    <style name="Theme.ModuloTechInterview" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryNight</item>
        <item name="colorPrimaryVariant">@color/primaryDarkNight</item>
        <item name="colorOnPrimary">@color/text_primary_night</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:titleTextStyle">@style/Title</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/text_primary_night</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="colorPrimary">@color/primaryNight</item>
        <item name="colorPrimaryDark">@color/primaryDarkNight</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>
</resources>