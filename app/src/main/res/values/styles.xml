<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="Theme.ModuloTechInterview">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.FontRegular">
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="Text.FontRegular.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.FontRegular.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Hint" parent="Text.FontRegular.Secondary">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.FontMedium">
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="Text.FontMedium.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Title" parent="Text.FontMedium.Primary">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Button" parent="Theme.ModuloTechInterview">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textColor">@color/selector_color_button</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@drawable/selector_shape_button</item>
    </style>

    <style name="EditText" parent="Text.FontRegular.Primary">
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="boxStrokeColor">@color/selector_color_edittext</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="errorTextColor">@color/accent</item>
    </style>
</resources>